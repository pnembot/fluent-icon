{
  "compilerOptions": {
    "target": "es2021",
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
